{
    "name": "thuraaung2493/php-package-skeleton",
    "description": "A skeleton repository for my php packages.",
    "keywords": [
        "php",
        "skeleton",
        "package"
    ],
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "ThuraAung\\PhpPackageSkeleton\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ThuraAung\\PhpPackageSkeleton\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "thuraaung2493",
            "email": "thuraaung2493@gmail.com",
            "role": "Developer",
            "homepage": "https://thuraaung2493.github.io/"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "laravel/pint": "^1.19",
        "pestphp/pest": "^3.7",
        "phpstan/phpstan": "^2.1",
        "rector/rector": "^2.0"
    },
    "scripts": {
        "refactor": "rector",
        "lint": "pint",
        "test:refactor": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always --coverage --parallel --min=100",
        "test": [
            "@test:refactor",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
